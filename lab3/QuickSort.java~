package lab3;
import java.util.Arrays;

public class QuickSort {
    public void sort (int arr[], int l, int high) {
	if (high <= low) return;

	int p = partition(arr, l, h);

	sort (arr, l, p-1);
	sort (arr, p+1, h);
    }

    private int pratition(int arr[], int low, int high) {
	int pivot = arr[high];
	int i = -1;
	for (int j = 0; j < high; j++) {
	    if (arr[j] < pivot) {
		i++;
		swap(arr, i, j);
	    }
	}

	swap (arr, i+1, high);
	return i;
    }

    private void swap (int arr[], int i, int j){
	int temp = arr[j];
	arr[j] = arr[i];
	arr[i] = temp;
    }

}
